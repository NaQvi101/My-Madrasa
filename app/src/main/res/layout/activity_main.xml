<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mymadrasa" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/poppinslight"
        android:text="Enroll Student"
        android:textColor="@color/theme_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/sabaqBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/poppinslight"
        android:text="Mark Sabaq"
        android:textColor="@color/theme_color"
        app:layout_constraintBottom_toTopOf="@+id/studentsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBtn"
        app:layout_constraintVertical_bias="0.52" />

    <Button
        android:id="@+id/studentsBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/poppinslight"
        android:text="Madrsa Students"
        android:textColor="@color/theme_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>